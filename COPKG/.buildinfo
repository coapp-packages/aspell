@import default_tools;

default {

	.Exec {
		Condition="!Exists('..\gen\dirs.h')";
		WorkingDirectory=@"$(MSBuildThisFileDirectory)..\";
		Command = @"perl gen/mk-dirs_h.pl . ./data ./dict . >gen/dirs.h";
	};
	
	.Exec {
		Condition="!Exists('..\gen\static_filters.src.cpp')";
		WorkingDirectory=@"$(MSBuildThisFileDirectory)..\";
		Command = @"perl gen/mk-static-filter.pl modules/filter/email-filter.info modules/filter/tex-filter.info modules/filter/sgml-filter.info modules/filter/html-filter.info modules/filter/context-filter.info modules/filter/texinfo-filter.info";
	}; 

    ("V110,V100", "win32,X64", "Release,Debug", "Static,Dynamic,ltcg", "aspell.vcxproj," ) => {
        .PushEnvironment{};
        .LoadSystemEnvironment{};
        .SetEnvironmentFromTarget.Target = "VC_${0}_${1}";
        
        .Message.Text = @"Environment vc_${0}_${1} -- ${2}  ${3}  *** IsValid => $(IsEnvironmentValid)";

        .Warning{
            Condition="!$(IsEnvironmentValid)";
            Text = @"********\r\nSKIPPING: vc_${0}_${1} -- ${2}  ${3}  ";
        }

        .Exec {
            Condition="$(IsEnvironmentValid)";
            Command = @"msbuild ${4} /p:PlatformToolset=${0};Platform=${1};Configuration=${2};UsesConfigurationType=${3}";
        };

        .PopEnvironment{};
    };
};

clean {
    .RemoveDir.Directories = @"intermediate";
};

nuke {
    .RemoveDir.Directories = @"output";
    .RemoveDir.Directories = @"intermediate";
};
