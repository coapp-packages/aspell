@import "version.inc" ;
@import "aspell.inc";
@import "outercurve.inc" ;

#define { 
    flavor: "${flav??vc10}"; 
    arch : "${arc??x86}";
}

package {
    name: "libaspell-dev[${flavor}]";
    display-name: "libaspell developer library";
    arch: @"${arch}";
}

metadata {
    summary: "The libaspell developer library";
}

files[libs] {
    root: @"..\output\${flavor}\${arch}\";

    include: {
        "*.lib",
        //"*.exp",
    };
    
    trim-path: all;
};

requires {
    package: "libaspell-dev-common-${package-version}-any-${Package.PublicKeyToken}";
    package: "libaspell[${flavor}]-${package-version}-${Package.Architecture}-${Package.PublicKeyToken}";
}

developer-library[libaspell[${flavor}]] {
    libraries : {
        libs
    };
}