	$(PSPELL_DLL_LIB_NAME) \
	$(PSPELL_DLL_DEF_NAME)

################################################################################
# {{{1	aspell-exe
#
ASPELL_EXE_NAME=aspell.exe
aspell_exe_EXTRALIBS = \
	$(ASPELL_COMMON_A_NAME) \
	$(ASPELL_DLL_LIB_NAME) \
#	$(PSPELL_DLL_LIB_NAME) \

aspell_exe_OBJECTS = \
	prog/aspell.obj \
	prog/check_funs.obj \
	prog/checker_string.obj \

aspell_exe: $(ASPELL_EXE_NAME)
$(ASPELL_EXE_NAME): $(aspell_exe_OBJECTS) $(aspell_exe_EXTRALIBS)
	$(CC) $(CFLAGS) \
	$** \
	$(aspell_exe_EXTRALIBS) \
	$(CURSES_LIB) \
	/Fe$@

aspell_exe_clean:
	-del $(aspell_exe_OBJ_CLEAN) $(ASPELL_EXE_NAME) \
    aspell.lib aspell.exp

################################################################################
# {{{1	word-list-compress
#
WORD_LIST_COMPRESS_EXE_NAME=word-list-compress.exe

word_list_compress_OBJECTS = \
	prog/compress.obj \

prog/compress.obj:	prog/compress.c
	$(CC) $(CFLAGS) /Fo$@ /c $**

word_list_compress_exe: $(WORD_LIST_COMPRESS_EXE_NAME)
$(WORD_LIST_COMPRESS_EXE_NAME): $(word_list_compress_OBJECTS)
	$(CC) $(CFLAGS) \
	$** \
	/Fe$@

word_list_compress_clean:
	-del $(word_list_compress_OBJ_CLEAN) $(WORD_LIST_COMPRESS_EXE_NAME)

################################################################################
# {{{1	install, regfile
#
REGFILE_NAME=aspell.reg

$(REGFILE_NAME):
	echo REGEDIT4		>  aspell.reg
	echo 		>> aspell.reg
	echo [HKEY_CURRENT_USER\\Environment]	>> aspell.reg
	echo \"ASPELL_CONF\"=\"prefix $(prefix)\"	>> aspell.reg

regfile: $(REGFILE_NAME)
regfile_clean:
	-del $(REGFILE_NAME)
install: regfile
	-mkdir $(installdir)
	-mkdir $(installdir)\$(pkglibdir)
	-mkdir $(installdir)\$(pkgdatadir)
	-copy /y  $(WORD_LIST_COMPRESS_EXE_NAME) $(installdir)
	-copy /y  $(ASPELL_EXE_NAME) $(installdir)
	-copy /y  $(ASPELL_DLL_NAME) $(installdir)
	-copy /y  $(ASPELL_DLL_LIB_NAME) $(installdir)
	-copy /y $(top_srcdir)\data\*.dat $(installdir)\$(pkgdatadir)
	-copy /y $(top_srcdir)\data\*.kbd $(installdir)\$(pkgdatadir)
	-copy /y $(REGFILE_NAME) $(installdir)
	


