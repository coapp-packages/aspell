	common/cache.obj \
	common/string.obj \
	common/getdata.obj \
	common/itemize.obj \
	common/file_util.obj \
	common/string_map.obj \
	common/string_list.obj \
	common/config.obj \
	common/posib_err.obj \
	common/errors.obj \
	common/error.obj \
