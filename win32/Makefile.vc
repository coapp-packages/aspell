PSPELL_DLL_LIB_NAME=libpspell-$(LIBVERSION)-dll.lib
PSPELL_DLL_DEF_NAME=pspell-$(LIBVERSION).exp

pspell_dll_LDFLAGS = \
	/out:$(PSPELL_DLL_LIB_NAME) \

pspell_dll_OBJECTS = \
	lib/dummy.obj \

pspell_dll_SOURCE = \
	lib/dummy.cpp \

pspell_dll: $(PSPELL_DLL_LIB_NAME)
$(PSPELL_DLL_LIB_NAME): $(pspell_dll_OBJECTS)
